<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/setPhrase"
        android:layout_width="120dp"
        android:layout_height="86dp"
        android:layout_marginBottom="56dp"
        android:text="Enlighten yourself"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.302"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="240dp"
        android:layout_height="149dp"
        android:clickable="false"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.706" />

    <ImageButton
        android:id="@+id/conf"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="1"
        android:background="@drawable/conf"
        app:layout_constraintBottom_toBottomOf="@+id/setPhrase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.321"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246" />

    <ImageButton
        android:id="@+id/jobs"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/jobs"
        app:layout_constraintBottom_toBottomOf="@+id/conf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/conf"
        app:layout_constraintTop_toTopOf="@+id/conf"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/shake"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/shake"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/conf"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/conf"
        app:layout_constraintTop_toBottomOf="@+id/conf"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/stephen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/stephen"
        app:layout_constraintBottom_toBottomOf="@+id/shake"
        app:layout_constraintEnd_toEndOf="@+id/jobs"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/jobs"
        app:layout_constraintTop_toBottomOf="@+id/jobs"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/Clear"
        android:layout_width="120dp"
        android:layout_height="86dp"
        android:text="clear selection"
        app:layout_constraintBottom_toBottomOf="@+id/setPhrase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/setPhrase"
        app:layout_constraintTop_toTopOf="@+id/setPhrase"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Select your enligther:"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/conf"
        app:layout_constraintEnd_toEndOf="@+id/conf"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/conf" />


</androidx.constraintlayout.widget.ConstraintLayout>